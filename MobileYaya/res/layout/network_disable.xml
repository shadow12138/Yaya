<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/no_wifi"
            android:text="网络请求失败" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请检查您当前的网络环境"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/tv_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_reload"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="reload"
            android:text="重新加载" />
    </LinearLayout>

    
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_backgroud_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="首页"
            android:drawableTop="@drawable/home"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_backgroud_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="分类"
            android:drawableTop="@drawable/category"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_backgroud_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="会员"
            
            android:drawableTop="@drawable/member"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_backgroud_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="购物车"
            android:drawableTop="@drawable/cart"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_doors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_backgroud_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="门店"
            android:drawableTop="@drawable/doors_icon"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>
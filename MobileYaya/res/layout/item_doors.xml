<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/selector_doors" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/maincolor" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_distance"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/sell_consult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/after_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sell_consult"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/after_sell"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/tecent_consult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_time"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tecent_consult"
        android:layout_marginTop="5dp"
        android:text="查看详情"
        android:textColor="@color/maincolor" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tecent_consult"
        android:layout_marginTop="5dp"
        android:text="发送到手机"
        android:textColor="@color/maincolor" />

</RelativeLayout>